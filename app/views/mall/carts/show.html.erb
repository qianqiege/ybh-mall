<%= form_tag(mall_bind_phone_path, method: :post, id: 'show_cart') do %>
  <div class='mobile_box'>
    <div class="page-title">
      <h2 class="text-cen">
        <span>我的购物车</span>
      </h2>
    </div>
    <div class="wraper pt50">
      <% if @line_items.empty? %>
        <div class="empty-car">
          <i class="icon"></i>
          <p class="gray84 mt10">你的购物车还是空的</p>
        </div>
      <% else %>
        <div class="car-box">
          <ul class="pro-list-portrait">
            <% @line_items.each do |line_item| %>
              <li>
                <div class="img">
                  <a href="<%= mall_product_path(line_item.product) %>">
                    <%= image_tag line_item.product.image_url %>
                  </a>
                </div>
                <div class="pro-m">
                  <a href="<%= mall_product_path(line_item.product) %>">
                    <p class="name"><%= line_item.product.name %></p>
                  </a>
                  <div class="gray84 option"><%= line_item.product.try(:product_sort) || '&nbsp;'.html_safe %></div>
                  <div class="info clearfix">
                    <p class="fl price">¥<span><%= money line_item.product.now_product_price %></span></p>
                  </div>
                  <div class="fr amount">
                    <span class="decrease disable decrease_btn_ajax">-</span>
                    <input type="tel" data-shop-count="<%= line_item.product.shop_count %>" class="num buyNum" value="<%= line_item.quantity %>" data-line_item_id="<%= line_item.id %>" readonly="">
                    <span class="increase increase_btn_ajax">+</span>
                  </div>
                  <span data-line_item_id="<%= line_item.id %>" class="del"></span>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
        <!-- end car-box -->
        <div class="cart-fixed-ft">
          <a class="commit" id="clearing_commit">结算</a>
          <span class="mr15">合计：¥<span class="total" id="total-price"><%= money current_cart.total_price %></span></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
