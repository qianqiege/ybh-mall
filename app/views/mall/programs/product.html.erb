
<style type="text/css">

	#content{
		height: 100%;
		width: 100%;
	}

	#content h2 {
		text-align: center;
		line-height: 3rem;
		font-size: 1.05rem;
	}

	.proImg{
		width: 94%;
		height: 20%;
		border: 1px solid black;
		margin-left: 3%;
	}

	.introduces{
		width: 94%;
		margin-left: 3%;
		margin-bottom: 3.5rem;
	}

	.introduces .itdPart{
		padding: 1rem 0;
		border-bottom: 1px dashed #ccc;
	}

	.introduces .itdPart p{
		font-family: "微软雅黑"
		font-size:0.8rem;
	}

	.introduces .itdPart span{
		display: block;
		margin-top: 1rem;
		text-indent: 30px;
	}

</style>

<div id="content">
	<div class="pro-show">
    <div class="swiper-container swp_pro swiper-container-horizontal">
      <ul class="swiper-wrapper">
        <li class='swiper-slide swiper-slide-active'>
          <%= image_tag @program_product.image if @program_product.image.present? %>
        </li>
      </ul>
    </div>
    <div class="pro-info">
      <p class="name"><%= raw @program_product.name %></p>
    </div>
  </div>
	<div class="introduces">

		<div class="itdPart">
			<p>★产品搭配功能</p>
			<span>
			<%= raw @program_product.features %>
			</span>
		</div>

		<div class="itdPart">
			<p>★适用人群</p>
			<span>
			<%= raw @program_product.crowd %>
			</span>
		</div>

		<div class="itdPart">
			<p>★备注</p>
			<span>
			<%= raw @program_product.desc %>
			</span>
		</div>

	</div>


</div>
