<%= render 'mall/shared/search' %>

<%= title '商品首页' %>

<div class="home">
  <%= render 'shared/slide' %>
  <div class="mail_menu">
    <div class="weui-grids">
      <a href="<%= mall_orders_path() %>" class="weui-grid">
        <div class="weui-grid__icon">
          <%= image_tag 'icon_tabbar.png' %>
        </div>
        <p class="weui-grid__label">我的订单</p>
      </a>
      <a href="<%= mall_orders_path(status: 'wait_send') %>" class="weui-grid">
        <div class="weui-grid__icon">
          <%= image_tag 'icon_tabbar.png' %>
        </div>
        <p class="weui-grid__label">付款单</p>
      </a>
      <a href="javascript:;" class="weui-grid">
        <div class="weui-grid__icon">
          <%= image_tag 'icon_tabbar.png' %>
        </div>
        <p class="weui-grid__label">发货单</p>
      </a>
    </div>
  </div>
  <!-- end mall_menu -->
  <div class="pro-area graybg">
    <div class="pro-tit">
      <h2>推荐用品</h2>
    </div>
    <div class="pro-list">
      <ul>
        <% @products.each do |product| %>
          <li>
            <a href="<%= mall_product_path(product) %>">
              <%= image_tag product.image_url %>
              <h5 class='text-center'><%= product.name %></h5>
              <p class="sub-title text-center"><%= product.desc %></p>
              <p class="item-price text-center">
                <em><%= money product.now_product_price %></em>
                <%# <% if product.original_product_price.present? %>
                <%#   <del><%= money product.original_product_price %></del>
                <%# <% end %>
              </p>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
