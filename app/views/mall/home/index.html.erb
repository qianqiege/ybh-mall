<%= render 'mall/shared/search' %>

<%= title '御易健商城 ' %>
<style type="text/css" media="screen">

  .clearfix:after {
    content: " ";
    display: block;
    clear: both;
    height: 0;
  }

  .clearfix {
    zoom: 1;
  }

  .pro-area .pro-list {
    padding: 0;
    margin: 0;
  }

  .pro-area .pro-list ul {
    width: 95%;
    margin: 0 auto;
  }

  .pro-area .pro-list ul li {
    margin: 0 2.5% 15px 2.5%;
  }

  .alert {
    display: none;
    position: absolute;
    top: 25%;
    left: 50%;
    margin-left: -150px;
    width: 300px;
    height: 300px;
    border: 1px solid #000;

  }

  .alert p {
    position: absolute;
    right: 3%;
    font-weight: bolder;
  }

  .alert a {
    display: inline-block;
    padding-top: 25px;
    width: 100%;
    height: 92%;
  }

  .pro_tab {
    width: 95%;
    margin: 0 auto;
    margin-top: 20px;
  }

  .pro_tab .fst_tab {
    display: flex;
  }

  .pro_tab .fst_tab li {
    flex: 1;
    text-align: center;
    font-size: 16px;
    font-weight: bolder;
    color: #ad0e11;
    background: #eee;
    padding: 3px 0;
  }

  .active {
    color: #fff !important;
    background: #ad0e11 !important;
  }

  .borbot {
    color: #ad0e11 !important;
    border-bottom: 2px solid #ad0e11 !important;
  }

  .hid_tab ul {
    display: flex;
  }

  .hid_tab ul li {
    flex: 1;
    text-align: center;
    font-size: 14px;
    font-weight: bolder;
    color: #666;
    padding: 5px 0;
    margin-top: 5px;
    border-bottom: 2px solid transparent;
  }

</style>

<div class="home">
  <%= render 'shared/slide' %>
  <!-- end mall_menu -->
  <div class="pro_tab"><!-- 这里是切换位置 -->
    <ul class="fst_tab">
      <% @first_categorys.each do |categroy| %>
          <li class="first" data-id="<%= categroy.id %>"><%= categroy.name %></li>
      <% end %>
    </ul>
    <div id="second_category">

    </div>
  </div>
  <div id="product_index">
    <%= render 'product_classified' %>
  </div>
</div>
<script type="text/javascript">
    $(function () {
        $(".first").on('click', function () {
            $.get("/mall/products/second_content?id="+$(this).data("id"), function (data) {
                console.log(data);
                $('#second_category').html(data)
            })
        });

        $('.fst_tab li').each(function (index, el) {
            $(this).click(function () {
                console.log(index);
                $(this).addClass('active').siblings().removeClass('active');

            })
        })

    })
</script>
