<script>
	$(".silder ul li").each(function(index, el) {
		$(this).click(function(){
			console.log(index);
			$(".pro .pro-sm").each(function(index_sm, el_sm) {
				if(index === index_sm){
                    $(this).show();
                }else{
                    $(this).hide();
                }
			});
		})
	});
</script>
