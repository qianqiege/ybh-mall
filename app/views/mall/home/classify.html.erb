<style type="text/css" media="screen">

	.clearfix:after {
	    content: " ";
	    display: block;
	    clear: both;
	    height: 0;
	}
	.clearfix {
	    zoom: 1;
	}

	.silder {
		width: 18%;
		height: 92%;
		background: #eaeaea;
		padding-bottom: 58px;
		border-right: 1px solid #ccc;
		position: fixed;
	}



	.silder li {
		padding: 10px 0;
		border-bottom: 1px solid #ccc;
		text-align: center;
	}

	.silder a {
		color: #666;
		font-size: 14px;
	}

	.pro {
		width: 82%;
		height: 100%;
		margin-left: 18%;
	}

	.pro .pro-sm {
		width: 100%;
		display:none;
		padding-bottom: 58px;
	}

	#content {
		display: block;
	}

	.pro-sm .chanpin {
		width: 100%;
	}

	.pro-sm .chanpin li {
		width: 49%;
		float: left;
		margin-bottom: 25px;
		height: 250px;
	}

	.pro-sm .chanpin .images {
		width: 90%;
		margin: 0 auto;
		margin-top: 10px;
		height: 150px;
	}

	.pro-sm .chanpin .images img {
		width: 100%;
		height: 100%;
	}

	.pro-sm .chanpin li a {
		color: #666;
	}

	.pro-sm .chanpin li span {
		font-size: 14px;
	}

	.pro-sm .chanpin li span, .pro-sm .chanpin li p {
		display: block;
		width: 90%;
		margin: 0 auto;
		margin-top: 10px;
		text-align: center;
	}

	.pro-sm .chanpin li p {
		color: red;
	}

	.active {
		background: #fff;
		color: red;
		z-index: 999;
	}

</style>


<div class="silder">
	<ul>
		<li><a>全部商品</a></li>
		<li><a>健康管理</a></li>
    <li><a href="http://a2.rabbitpre.com/m/vEnrqUvUW?lc=1&sui=OIAbhdtO&cnl=&from=singlemessage&isappinstalled=0#from=share">保值产品</a></li>
		<li><a>活动商品</a></li>
		<li><a>虚拟商品</a></li>
		<li><a>组合方案</a></li>
	</ul>
</div>

<div class="pro">
	<div class="pro-sm" id="content">
		<ul class="clearfix chanpin">
			<% @products.each do |product| %>
	          <li>
							<a href="<%= mall_product_path(product) %>">
		            <div class="images"><%= image_tag product.image_url(:product_icon) if product.image_url.present? %></div>
		            <span><%= product.name %></span>
		            <!-- <span><%= raw product.name %></span> -->
		            <p><%= money product.now_product_price %></p>
							</a>
	          </li>
	     <% end %>
    </ul>
	</div>
	<div class="pro-sm">
		<ul class="clearfix chanpin">
			<% @products.where(sort: 1).each do |product| %>
						<li>
							<a href="<%= mall_product_path(product) %>">
								<div class="images"><%= image_tag product.image_url(:product_icon) if product.image_url.present? %></div>
								<span><%= product.name %></span>
								<!-- <span><%= raw product.name %></span> -->
								<p><%= money product.now_product_price %></p>
							</a>
						</li>
			<% end %>
		</ul>
	</div>
  <div class="pro-sm">
    <ul class="clearfix chanpin">
      <% @programs.each do |programs| %>
          <li>
            <a href="<%= mall_programs_product_path(programs) %>">
              <div class="images"><%= image_tag programs.image_url(:product_icon) if programs.image_url.present? %></div>
              <span><%= programs.name %></span>
              <!-- <span><%= raw programs.name %></span> -->
              <p><%= raw programs.desc %></p>
            </a>
          </li>
      <% end %>
    </ul>
  </div>
	<div class="pro-sm">
		<ul class="clearfix chanpin">
			<% @products.where(sort: 2).each do |product| %>
	          <li>
							<a href="<%= mall_product_path(product) %>">
		            <div class="images"><%= image_tag product.image_url(:product_icon) if product.image_url.present? %></div>
		            <span><%= product.name %></span>
		            <!-- <span><%= raw product.name %></span> -->
		            <p><%= money product.now_product_price %></p>
							</a>
	          </li>
	     <% end %>
    </ul>
	</div>
	<div class="pro-sm">
		<ul class="clearfix chanpin">
			<% @products.where(sort: 3).each do |product| %>
	          <li>
							<a href="<%= mall_product_path(product) %>">
		            <div class="images"><%= image_tag product.image_url(:product_icon) if product.image_url.present? %></div>
		            <span><%= product.name %></span>
		            <!-- <span><%= raw product.name %></span> -->
		            <p><%= money product.now_product_price %></p>
							</a>
	          </li>
	      <% end %>
  	</ul>
	</div>
</div>

<script>
	$(".silder ul li").each(function(index, el) {
		$(this).click(function(){
			console.log(index);
			$(this).addClass('active').siblings().removeClass('active');
			$(".pro .pro-sm").each(function(index_sm, el_sm) {
				if(index === index_sm){
                    $(this).show();
                }else{
                    $(this).hide();
                }
			});
		})
	});
</script>
