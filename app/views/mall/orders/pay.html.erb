<div class='mobile_box'>
  <div class="page-title">
    <h2 class="text-cen">
      <span>订单支付</span>
      <%= link_to '', mall_cart_path, class: 'arrow-left' %>
    </h2>
  </div>
  <div class="wraper pt50 graybg">
    <% if flash[:success] %>
      <div class="notice"><%= flash[:success] %></div>
    <% end %>
    <div class="cashier-total">
		 订单总额:  <span id="cashierTotal">¥<%= money @order.price %></span> 
	  </div>
    <div class="cashier-info">
      还需支付： 
      <div class="fr">
        <span class="cashier-info-needpay">¥<%= money @order.price %></span>
      </div>
	  </div>
    <div class="cashier-body">
      <span class="pay-type-title">支付方式</span>
      <ul class="cashier-paytype">
        <li class="weixinpay">
          <i></i>微信支付<span></span>
        </li>
      </ul>
    </div>
    <div id="cachier-fix-foot" class="cachier-fix-foot active">确认支付</div>
  </div>
</div>
