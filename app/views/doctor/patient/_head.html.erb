<style>
.profile {
  position: relative;
}


.float{
  float: right;
  display: inline-block;
  color: #fff;
  margin-right: 20px;
  border: 1px dashed #eee;
  padding:2px 5px;
  border-radius: 3px;
  margin-top: 10px;
}

.healthName {
  display: inline-block;
  position: absolute;
  top: 18%;
  left: 22%;
}

.docText {
  font-size: 14px;
}

</style>
<div class='wallet bg-size'>
  <div class="profile">
    <div class="placeholder">
      <% if @doctor_info_review && @doctor_info_review.user.wechat_user.headimgurl %>
        <%= image_tag @doctor_info_review.user.wechat_user.headimgurl, size: "45x45"  %>
      <% else %>
        <%= image_tag "fallback/default", size: "45x45" %>
      <% end -%>

      <span class="healthName"><%= @doctor_info_review.user.name %></span>
      <p style="padding-top: 5%;">身份证号：<%= @doctor_info_review.user.identity_card %></p>
      <p>联系方式：<%= @doctor_info_review.user.telphone %></p>
    </div>
  </div>
</div>
