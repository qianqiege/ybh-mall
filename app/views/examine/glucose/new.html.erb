<%= title '血糖' %>
<% if flash[:notice] %>
  <div class="notice"><%=flash[:notice]%></div>
<% end %>
<%= form_for @glucose, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
<div class="weui-cells__title">血糖测试</div>
<div class="weui-cells weui-cells_form">
    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">餐前</label></div>
        <div class="weui-cell__bd">
          <%= f.text_field :ante_cibum ,class:"weui-input",type:"digit",pattern:"[1-9][0-9]*(\.[0-9]+)?$", placeholder:"请输入血糖值"%>
        </div>
    </div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">餐后</label></div>
        <div class="weui-cell__bd">
          <%= f.text_field :after_a_meal ,class:"weui-input",type:"digit",pattern:"[1-9][0-9]*(\.[0-9]+)?$", placeholder:"请输入血糖值"%>
        </div>
    </div>
</div>
<div class="weui-btn-area">
    <%= f.submit "上传" ,class:"weui-btn weui-btn_primary" %>
</div>
<% end %>

<div class="weui-btn-area">
  <table class="hovertable">
    <tr>
    	<th>餐前/毫摩尔</th><th>餐后/毫摩尔</th><th>测量时间</th>
    </tr>
    <% @search.each do |search|%>
        <tr>
          <% if search.ante_cibum > 3.8 && search.ante_cibum < 6.2 %>
            <th class="green"><%= search.ante_cibum %></th>
          <% else %>
            <th class="red"><%= search.ante_cibum %></th>
          <% end %>

          <% if search.after_a_meal > 6.6 && search.after_a_meal < 9.5 %>
            <th class="green"><%= search.after_a_meal %></th>
          <% else %>
            <th class="red"><%= search.after_a_meal %></th>
          <% end %>
          <th><%= datetime search.updated_at %></th>
        </tr>
    <% end %>
  </table>
</div>
