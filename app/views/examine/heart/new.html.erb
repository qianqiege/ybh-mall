<%= title '心率' %>
<% if flash[:notice] %>
  <div class="notice"><%=flash[:notice]%></div>
<% end %>
<%= form_for @heart, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
<div class="weui-cells__title">心率测试</div>
<div class="weui-cells weui-cells_form">
    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">心率</label></div>
        <div class="weui-cell__bd">
          <%= f.text_field :value ,class:"weui-input",type:"number",placeholder:"请输入心率值"%>
        </div>
    </div>
</div>
<div class="weui-btn-area">
    <%= f.submit "上传" ,class:"weui-btn weui-btn_primary" %>
</div>
<% end %>

<div class="weui-btn-area">
  <table class="hovertable">
    <tr>
    	<th>心率值</th><th>状态</th>
    </tr>
    <% @search.each do |search|%>
    <% if @search %>
      <tr>
      	<th><%= search.value %>次/分</th>
        <% if search.value > 59 && search.value < 101 %>
          <th class="green">正常</th>
        <% else %>
          <th class="red">异常</th>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </table>
</div>
