<%= title '我的S货币' %>

<body class="size15">
<% if !@scoin_account[0].nil? %>
  <div class="weui-cells__title">已拥有的S货币账户：</div>
  <div class="weui-cells weui-cells_radio size15">
      <% @scoin_account.each do |account| %>
        <a class="weui-cell weui-cell_access", href="<%= user_scoin_info_path(account.id) %>">
          <div class="weui-cell__bd">
              <div>
                <div class="account">账户：<%= account.account %></div>
              </div>
          </div>
        </a>
      <% end %>
  </div>
<% else %>
  <div class="weui-cells__title">S货币账户：</div>
  <div class="weui-cells weui-cells_radio">
      <label class="weui-cell weui-check__label" for="x11">
          <div class="weui-cell__bd">
            <p>账户：未拥有S货币账户</p>
          </div>
      </label>
    </div>
<% end %>

<% if !@sum.nil? %>
    <div class="weui-cells__title">S货币余额：</div>
    <div class="weui-cells weui-cells_radio size15">
        <label class="weui-cell weui-check__label" for="x11">
            <div class="weui-cell__bd">
                <div>S货币余额：<%= @sum%></div>
            </div>
        </label>
    </div>
<% else %>
  <div class="weui-cells__title">已拥有的S货币余额：</div>
  <div class="weui-cells weui-cells_radio">
      <label class="weui-cell weui-check__label" for="x11">
          <div class="weui-cell__bd">
              <div>S货币余额：0</div>
          </div>
      </label>
  </div>
<% end %>
</body>



  <div class="weui-cells__title">S货币账户详细信息：</div>
  <table class="table">
      <thead>
          <tr>
              <td class="td">账户</td>
              <td class="td">状态</td>
              <td class="td">数量</td>
              <td class="td">开户时间</td>
              <td class="td">拥有者</td>
          </tr>
      </thead>
      <% if !@scoin_account[0].nil? %>
        <tbody>
          <% @scoin_account.each do |account| %>
            <tr class="center">
                <td class="td" style="width: 26%"><%= account.account %></td>
                <td class="td" style="width: 15%"><%= account.state %></td>
                <td class="td" style="width: 10%"><%= account.number %></td>
                <td class="td" style="width: 20%"><%= date account.created_at %></td>
                <td class="td" style="width: 18%"><%= account.user.name %></td>

            </tr>
          <% end %>
        </tbody>
      <% else %>
        <tbody>
            <tr class="center">
                <td class="td" style="width: 20%" >null</td>
                <td class="td" style="width: 22%" >null</td>
                <td class="td" style="width: 22%" >null</td>
                <td class="td" style="width: 16%" >0</td>
                <td class="td" style="width: 20%" >0</td>
            </tr>
        </tbody>
      <% end %>
  </table>
