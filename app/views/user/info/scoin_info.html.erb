<%= title '账户详细信息' %>
<table class="table">
    <thead>
        <tr>
            <td class="td">账户</td>
            <td class="td">S币包</td>
            <td class="td">结束时间</td>
            <td class="td">收益</td>
        </tr>
    </thead>
    <% if !@scoin_record.nil? %>
      <tbody>
        <% @scoin_record.each do |scoin| %>
          <tr class="center">
              <td class="td" style="width: 40%"><%= @scoin_account.account %></td>
              <td class="td" style="width: 20%"><%= scoin.scoin_type.name %></td>
              <td class="td" style="width: 30%"><%= date scoin.end_at %></td>
              <% if !@scoin_account.number.nil? %>
                <td class="td"style="width: 10%"><%= @scoin_account.number %></td>
              <% else %>
                <td class="td"style="width: 10%">0</td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    <% end %>
