<%= title '账户详细信息' %>
<table class="table">
    <thead>
        <tr>
            <td class="td">S货币包</td>
            <td class="td">开始时间</td>
            <td class="td">结束时间</td>
            <td class="td">收益</td>
            <td class="td">预计总收益</td>
        </tr>
    </thead>
    <% if !@scoin_record[0].nil? %>
      <tbody>
        <% @scoin_record.each do |scoin| %>
          <tr class="center">
              <td class="td" style="width: 20%"><%= scoin.scoin_type.name %></td>
              <td class="td" style="width: 22%"><%= date scoin.start_at %></td>
              <td class="td" style="width: 22%"><%= date scoin.end_at %></td>
              <% @time = (Date.current - Date.parse(scoin.start_at.to_s)).to_i %>
              <!-- //获取当前时间和账户开始时间有几天 -->
              <% if @time > 0 %>
              <!-- //判断天数是否小于等于0 -->
                <% @now_everyday = scoin.scoin_type.everyday * @time %>
                <!-- //S币包一天送的数量 × 天数 -->
                <% @now_count = scoin.scoin_type.once + @now_everyday + scoin.scoin_type.everyday %>
                <!-- //计算第一次赠送的 + （一天送的 × 天数） + 一天送的次数 -->
                <td class="td" style="width: 16%"><%= @now_count %></td>
                <!-- //就是目前总收益 -->
              <% else %>
              <!-- //如果天数等于0，就计算一天赠送的 + 第一次赠送的 -->
                <% @now_count = scoin.scoin_type.once + scoin.scoin_type.everyday %>
                <!-- //计算第一次赠送的 + 一天送的次数 -->
                <td class="td" style="width: 16%"><%= @now_count %></td>
                <!-- //就是目前总收益 -->
              <% end %>
              <td class="td" style="width: 20%"><%= scoin.scoin_type.count %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <tbody>
          <tr class="center">
              <td class="td" style="width: 20%" >null</td>
              <td class="td" style="width: 22%" >null</td>
              <td class="td" style="width: 22%" >null</td>
              <td class="td" style="width: 16%" >0</td>
              <td class="td" style="width: 20%" >0</td>
          </tr>
      </tbody>
    <% end %>
</table>
