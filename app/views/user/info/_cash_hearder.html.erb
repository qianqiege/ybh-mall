
<style type="text/css">
  .weui-flex__item{
    border-right: 1px solid #bbb;
  }

  .weui-flex__item:last-child{
    border: 0;
  }

	.button-tx{
		    color: #0093FF;
		    width: 100%;
		    display: block;
		    text-align: center;
		    font-size: 16px;
		    background-color: white;
		    font-family: microsoft Yahei;
		    padding-top: 2.5%;
		    padding-bottom: 5px;
	}

  .box-btn{
    width: 60%;
    margin-left: 20%;
     border: 1px solid #bb0100;
    box-shadow: 1px 1px 5px #f21f1d;
  }

</style>

<div class='wallet'>
  <div class="weui-flex profile">
    <div>
      <div class="placeholder">
        <%= image_tag current_user.headimgurl if current_user && current_user.headimgurl %>
      </div>
    </div>
    <div class="weui-flex__item profile-text">
      <div class="placeholder"><%= current_user.nickname %></div>
    </div>
  </div>
  <div class="weui-flex middle-text">
    <div class="weui-flex__item"><div class="placeholder text-center">现金资产</div></div>
  </div>
  <div class="weui-flex bottom-text">
    <div class="weui-flex__item">
      <div class="placeholder text-center box-btn">
        <a href="#" class="weui-cell_access">
          <p>可提现</p>
          <% available = Integral.find_by(user_id: current_user.user_id) %>
          <% number = 0 %>
          <% if !available.nil? %>
            <p><%= current_user && available.cash  || 0 %></p>
          <% else %>
            <p>0</p>
          <% end %>
        </a>
      </div>
    </div>


    <div class="weui-flex__item">
      <div class="placeholder text-center box-btn">
        <a href="<%= user_transaction_path %>" class="weui-cell_access">
          <p>可使用</p>
          <p><%= current_user && available.cash || 0 %></p>
        </a>
      </div>
    </div>

  </div>
</div>
