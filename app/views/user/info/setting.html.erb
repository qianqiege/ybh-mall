
<style type="text/css">
  
    .relaA {
      position: relative;
    }

    .posiA {
        position: absolute;
        top: 0;right: 0;
        border-radius: inherit;
    }

    .uploaderImageBoxStyle {
      position: relative;
      background-color: #D9D9D9;
    }

    .cover {
      width: 50px;
      height: 50px;
      z-index: 999;
      position: absolute;
      left: 50%;
      top: 50%;
      transform: translate(-50%,-50%);
      text-align: center;
      background-color: #D9D9D9;
      display: none;
    }

</style>







