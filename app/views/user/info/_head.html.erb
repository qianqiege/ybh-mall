<div class='wallet bg-size'>
  <div class="weui-flex profile" style="background: none;">
    <div style="background: none;">
      <div class="placeholder headImage" style="background: none;">
        <%= image_tag current_user.headimgurl if current_user && current_user.headimgurl %>
      </div>
    </div>
    <div class="placeholder" style="background: none; line-height: 54px; margin-left: 10px;"><%= current_user.nickname %></div>
    <div class="weui-flex__item profile-text" style="background: none;">
      <% if current_user.user.is_partner == true %>
          <%= image_tag '合伙人.png', style: 'width: 50px; height: 25px; position: relative; top: -4px; margin-top: 18px;' %>
      <% end %>
      <% if current_user.user.is_entrust %>
        <a href="<%= wechat_show_consumer_entrustment_path %>" style="display: inline-block; position: relative; top: 4px;">
          <img src="data:image/png;base64,">
        </a>
      <% end %>
    </div>
  </div>
</div>
