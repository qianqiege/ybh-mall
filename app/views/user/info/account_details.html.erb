<%= title '易积分收支明细' %>
<div class="weui-cells__title">易积分收支明细：</div>
<table class="table">
    <thead>
        <tr>
            <td class="td">姓名</td>
            <td class="td">收入支出渠道</td>
            <td class="td">数量</td>
            <td class="td">时间</td>
        </tr>
    </thead>
    <% if @details.length >= 1 %>
      <tbody>
        <% @details.each do |details| %>
          <% if !details.nil? %>
            <tr class="center">
                <td class="td" style="width: 20%"><%= details.user.name %></td>
                <td class="td" style="width: 30%"><%= details.reason %></td>
                <td class="td" style="width: 25%"><%= details.number %></td>
                <td class="td" style="width: 25%"><%= date details.created_at %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    <% else %>
      <tbody>
          <tr class="center">
              <td class="td" style="width: 20%" >null</td>
              <td class="td" style="width: 30%" >null</td>
              <td class="td" style="width: 25%" >null</td>
              <td class="td" style="width: 25%" >null</td>
          </tr>
      </tbody>
    <% end %>
</table>
