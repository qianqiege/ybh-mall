
<style type="text/css">
  form{
    margin-left: 1rem;
    margin-right: 1rem;
  }

  form p{
    line-height: 2rem;
  }

  input{
    height: 1.8rem;
    outline: none;
    padding-left: 1rem;
    padding-right: 1rem;
    border: 0;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
  }

  .bank,.payBaby{
    display: none;
    margin-top: 1rem;
    width: 90%;
    padding:0.5rem 0.5rem 0 0.5rem;
    border: 1px dashed #ccc;
  }

  .bank input,.payBaby input{
    width: 95%;
    margin-bottom: 1rem;
    height: 2rem;
  }

  select{
    height: 2rem; margin:0.1rem 0.5rem 0 0;
    width: 10rem;padding-left: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 10px;
  }

  .account,.quantity,select{
    border: 0;
    border: 1px solid #ccc;
    border-radius: 0.5rem;
  }

  .quantity{
    width: 90%;
  }

  .zhanghu {
    width: 94%;
    display: flex;
  }

  .zhanghu span{
    font-size: 0.5rem;
    color: #666;
    line-height: 2rem;
  }

  .account{
    flex: 1;
  }

</style>



<div style="text-align:center;margin-top: 20px;">

  <%= image_tag(current_user.headimgurl,size: "70x70" ) %>
  <div class="资料">
    <span class="电话"><%= @gift_user.telphone %></span>
    <br/>
    <span class="名字"><%= @gift_user.name %></span>
  </div>

</div>

<%= form_tag(controller: "info",action: "gift_user" ,method: "post") do %>

  <p>赠送数量:</p>
  <input type="number" name="quantity" class="quantity">
  <div class="boders"></div>
  <p>赠送方式:</p>
  <div class="zhanghu">
    <select name="account_type" id="a">
      <option value="无效账户">账户类型</option>
      <option value="银行卡">银行卡</option>
      <option value="支付宝">支付宝</option>
    </select>
    <span> （支持银行卡和支付宝）</span>
  </div>

  <div class="bank">
      <input type="text" name="bank_name" placeholder="姓名">
      <input type="number" name="bank" placeholder="卡号">
      <input type="text" name="where" placeholder="开户行">
  </div>

  <div class="payBaby">
    <input type="text" name="name" placeholder="姓名">
    <input type="text" name="account" placeholder="账号">
  </div>


  <script type="text/javascript">
      document.getElementById("a").onchange = function() {
        if( this.value == "银行卡" ) {
          document.getElementsByClassName('bank')[0].style.display = "block";
          document.getElementsByClassName('payBaby')[0].style.display = "none";
        }else if( this.value == "支付宝" ){
          document.getElementsByClassName('bank')[0].style.display = "none";
          document.getElementsByClassName('payBaby')[0].style.display = "block";
        }else{
          document.getElementsByClassName('bank')[0].style.display = "none";
          document.getElementsByClassName('payBaby')[0].style.display = "none";
        }
      }
  </script>

<input name = "id" style="display: none;" value="<%= @gift_user.id %>">
<button type= "submit" class="weui-btn" style="background-color: #30A8E2; margin-left: 0" >确认转账</button>

<% end %>
