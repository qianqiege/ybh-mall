  <div class="boders"></div>
  <p>赠送方式:</p>
  <div class="zhanghu">
    <select name="account_type" id="a">
      <option value="无效账户">账户类型</option>
      <option value="银行卡">银行卡</option>
      <option value="支付宝">支付宝</option>
    </select>
    <span> （支持银行卡和支付宝）</span>
  </div>

  <div class="bank">
      <input type="text" name="bank_name" placeholder="姓名" value="<%= current_user.user.name %>" disabled="true">
      <input type="number" name="bank" placeholder="卡号">
      <input type="text" name="where" placeholder="开户行">
  </div>

  <div class="payBaby">
    <input type="text" name="name" placeholder="姓名" value="<%= current_user.user.name %>" disabled="true">
    <input type="text" name="account" placeholder="账号">
  </div>

<input name = "id" style="display: none;" value="<%= @gift_user.id %>">
<input name="type_coin" style="display: none;" value= "0" >
<button type= "submit" class="weui-btn" style="background-color: #30A8E2; margin-left: 0" >确认兑换</button>

