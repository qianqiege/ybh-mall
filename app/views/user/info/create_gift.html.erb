<div style="text-align:center;margin-top: 20px;">

  <% if !@w_user.nil? %>
    <%= image_tag(@w_user.headimgurl,size: "70x70" ) %>
  <% else %>
    <%= image_tag("person.png" ,size: "70x70" ) %>
  <% end %>
  <div class="资料">
    <span class="电话"><%= @gift_user.telphone %></span>
