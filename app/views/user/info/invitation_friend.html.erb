<style type="text/css" media="screen">
    
    .thisTable {
        width: 100%;
    }

    .thisTable thead tr {
        display: flex;      
    }

    .thisTable thead td {
        flex: 1
    }

    .thisTable tbody tr {
        display: flex;
        width:100%;
        height: 40px;
        line-height: 40px;
        /*display: inline-block;*/
    }

    .thisTable tbody td{
        flex: 1;
        padding: 0;
        /*display: inline-block;*/
    }

</style>


<%= title '我邀请的好友' %>
<table class="table thisTable">
    <thead>
        <tr>
            <td class="td">邀请用户</td>
            <td class="td">邀请时间</td>
        </tr>
    </thead>
    <tbody>
        <% @invitation_friend.each do |invitation_friend| %>
        <tr>
          <td class="td"><%= invitation_friend.name %></td>
          <td class="td"><%= date invitation_friend.created_at %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
