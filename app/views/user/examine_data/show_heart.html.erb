<%= title '我的心率监测数据' %>
<div class="weui-btn-area">
  <table class="hovertable">
    <tr>
    	<th>心率值 次/分</th><th>状态</th><th>测量时间</th>
    </tr>
    <% if !@show.nil? %>
    <% @show.each do |search|%>
      <tr>
      	<th><%= search.value %></th>
        <% if search.value > 59 && search.value < 101 %>
          <th class="green">正常</th>
        <% else %>
          <th class="red">异常</th>
        <% end %>
        <th><%= datetime search.updated_at %></th>
      </tr>
      <% end %>
    <% end %>
  </table>
</div>
