<html>
<body>
  <h2><%= image_tag "ybyt04.png", size: "60x60" %><p>御邦医通御易健商城</p></h2>
  <div class="demo" style="padding: 20px 0;">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name) ,html: {class:"form-horizontal"}) do |f| %>
          <span class="heading">用户登录</span>

          <div class="form-group">
            <%= f.telephone_field :telphone, autofocus: true , placeholder: "请输入手机号" ,required: true ,class:"form-control"%>
            <i class="fa fa-user"></i>
          </div>

          <div class="form-group help">
            <%= f.password_field :password, autocomplete: "off",placeholder: "请输入登录密码" ,required: true,class:"form-control" %>
            <i class="fa fa-lock"></i>
            <a href="#" class="fa fa-question-circle"></a>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-group ">
            <div class="main-checkbox">
              <input type="checkbox" value="None" id="checkbox1" name="check">
              <label for="checkbox1"></label>
            </div>
              <%= f.label :remember_me ,class:"text" %>
              <%= f.submit "Log in",class:"btn btn-default" %>
            </div>

          </div>
          <% end -%>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </body>
</html>
