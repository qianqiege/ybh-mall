<%= title '首页' %>

<div class="home">
  <%= render 'shared/slide' %>

  <div class='weui-panel__hd'>会员类别</div>
  <div class="weui-panel__bd">
    <div class="weui-grids">
      <% @vip_types.each do |vip_type|%>
        <a href="javascript:;" class="weui-grid">
          <div class="weui-grid__icon">
            <%= image_tag(vip_type.icon_url, class: "weui-tabbar__icon") %>
          </div>
          <p class="weui-grid__label"><%= vip_type.name %></p>
        </a>
      <% end %>
    </div>
  </div>

  <div class='weui-panel__hd'>套餐类别</div>
  <div class="weui-panel__bd">
    <div class="weui-grids">
      <% @setmeal.each do |setmeal|%>
        <a href="<%= wechat_setmeal_path(setmeal)%>" class="weui-grid">
          <div class="weui-grid__icon">
            <%= image_tag(setmeal.icon_url, class: "weui-tabbar__icon") %>
          </div>
          <p class="weui-grid__label"><%= setmeal.name %></p>
        </a>
      <% end %>
    </div>
  </div>
</div>
