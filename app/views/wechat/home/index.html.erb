<style>
  .huiyuan {
    width: 92%;
    margin: 0 auto;
    display: flex;
  }

.huiyuan div {
  width: 26%;
  height: 40px;
  background: #DCDCDC;
  flex: 1;
  margin-right: 2%;
  text-align: center;
  line-height: 40px;
  border-radius: 10px 35px;
}

.img_width{
  width: 100%;
}

.fontSizes {
  font-size: 0.8rem;
}

.healthDiv {
  width: 100%;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-top: 8px;
}

.healthDiv h5 {
  padding: 0 10px 8px 20px;
  border-bottom: 1px solid #eee;
}

.healthKuai {
    display: flex;
    padding:8px 0;
}

.healthKuai a {
  display: inline-block;
  flex: 1;
  display: flex;
}

.healthKuai a:first-child {
  border-right: 1px solid #eee;
}

.healthKuai a img {
  width: 45px;
  margin-right: 10%;

}

.healthKuai a span {
  display: inline-block;
  flex: 1;
  text-align: center;
  color: #666;
}

.tongzhi {
  width: 90%;
  margin:0 auto;
  overflow: hidden;
  height: 4%;
  background:#eee;
  border-radius: 15px;
  margin-top: 2%;
  text-align: center;
  position: relative;
}

.tongzhi a {
  display: inline-block;
  height: 100%;
  color: #ad0e11;
  font-size: 1rem;
}

.tongzhi img {
  display: inline-block;
  position: absolute;
  top: 6px;
  left: 15px;
}

.shopList {
   margin-top: 5%;
}

.shopList ul {
    border-top: 1px solid #ccc;
}

.shopList ul li {
    display: flex;
    border-bottom:1px solid #ccc;
}

.shopList ul li .slLeft,.shopList ul li .slRight {
    display: inline-block;
}

.shopList ul li .slLeft {
    width: 30%;
    padding:2%;
}

.shopList ul li .slRight {
    flex:1;
}

.shopList ul li .slLeft img {
    width: 100%;
}

.shopList ul li .slRight p {
    font-size: 1.1rem;
    margin: 6% 0 0 4%;
}

.shopList ul li .slRight span {
    font-size: 0.8rem;
    margin: 4% 0 0 4%;
    color: #666;
}

a {
  text-decoration:none;
  out-line: none;
  color: #000;
}

a:active {
  color: #000;
}

.shopTag {
    display: flex;
    padding:0 5% 0 2%;
    margin:1% 0;
}

.shopTag span {
    display: inline-block;
    width:20%;
    background: #ad0e11;
    text-align: center;
    color: #fff;
    padding: 0 2%;
}

.shopTag a {
    flex:1;
    text-align: right;
}
ul.block-li {
    display: block;
    /*text-align: center;*/
    margin: 20px 0;
  }

  ul.block-li li{
    width: 23%;
    height: 101px;
    text-align: center;
    display: inline-block;
    overflow: hidden;
  }

  ul.block-li li:first-child {
    margin-left: 2.3%;
  }

  ul.block-li li:nth-child(6) {
    margin-left: 2.3%;
  }

</style>

