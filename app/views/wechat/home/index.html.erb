<%= title '首页' %>

<div class="home">
  <%= render 'shared/slide' %>

  <div class='weui-panel__hd'>御邦会会员</div>
  <div class="weui-panel__bd">
    <div class="weui-grids">
      <% @ybclub.each do |ybclub| %>
        <a href="<%= wechat_member_card_path(ybclub)%>" class="weui-grid">
          <div class="weui-grid__icon">
            <%= image_tag(ybclub.icon_url, class: "weui-tabbar__icon") %>
          </div>
          <p class="weui-grid__label"><%= ybclub.name %></p>
        </a>
      <% end %>
    </div>
  </div>

  <div class='weui-panel__hd'>医通会会员</div>
  <div class="weui-panel__bd">
    <div class="weui-grids">
      <% @ytclub.each do |ytclub|%>
        <a href="<%= wechat_member_card_path(ytclub)%>" class="weui-grid">
          <div class="weui-grid__icon">
            <%= image_tag(ytclub.icon_url, class: "weui-tabbar__icon") %>
          </div>
          <p class="weui-grid__label"><%= ytclub.name %></p>
        </a>
      <% end %>
    </div>
  </div>
</div>
