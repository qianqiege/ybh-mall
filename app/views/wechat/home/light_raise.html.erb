
<style media="screen">

    .allCoa {
        display: block;
        padding-top: 20%;
    }

    .levelTop,.levelBottom {
       width: 92%;
       margin: 0 auto;
    }

    p {
      color: #d7d0b8;
    }

    .levelTop a{
        display: inline-block;
        border:1px solid #d7d0b8;
        padding: 2% 4%;
        margin: 3% 0 0 4%;
        text-align: center;
        color: #d7d0b8;
        border-radius: 15px;
        width: 35%;
    }

    .selfText {
        margin: 3% 0 0 3%;
    }

    .selfNumber {
        margin: 2% 0 5% 8%;
        display: block;
        border:1px solid #d7d0b8;
        border-radius: 5px;
        outline: none;
        text-indent: 12px;
        height: 32px;
        width: 84%;
        background: none;
        color: #d7d0b8;
        font-size: 20px;
    }

    .submitValue {
        -webkit-appearance:none;
        margin:0 auto;
        display: block;
        width: 30%;
        height: 36px;
        line-height: 36px;
        border: 0;
        background: #d7d0b8;
        border: 1px solid #d7d0b8;
        border-radius: 5px;
        color: #000;
        font-size: 14px;
    }

    .actives {
          background: #d7d0b8;
          color: #000!important;
    }

</style>

<%= title '一盏明灯' %>
<div class="lightCont">
    <form action="<%= wechat_light_order_path %>" method="get" class="allCoa">
      <p class="selfText">请选择您捐赠的金额：</p>
      <div class="levelTop">
          <a>500</a>
          <a>1000</a>
          <br />
          <a>1500</a>
          <a>2000</a>
      </div>
      <p class="selfText">请输入金额：</p>
      <input type="number" name="price" class="selfNumber" step="0.01">

      <!--  <a href="javascript:;" class="weui-btn weui-btn_plain-primary submitValue">确认提交</a> -->

      <input type="submit" value="确认提交" class="submitValue" />
    </form>
</div>

<script type="text/javascript">

    $(".levelTop a").click(function(){
        console.log($(this).text());
        $(".selfNumber").val($(this).text()) ;
        $(this).addClass('actives').siblings('a').removeClass('actives');
    })

</script>
