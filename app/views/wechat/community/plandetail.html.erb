	.shopList ul li .slRight {
	    flex:1;
	    padding: 15px 0 0 15px;
	}
	.slRight-title {
		color: #333;
	}
	.slRight-title p{
		line-height: 25px;
	}
	.slRight-title .money{
		font-size: 16px;
		font-weight: bold;
	}
	.footLay{
		text-align: right;
		margin-right: 10px;
	}
	.footLay p{
		display: inline-block;
		font-weight: bold;
	}
	.footLay a{
		color: #fff;
		background-color: #ad0e11;
		padding: 15px 20px;
	}
	.footer-makers {
		position: fixed;
		bottom: 58px;
		left: 0;
		width: 100%;
		margin-top: 10px;
		background-color: #f1f1f1;
	}

	.footer-makers-button a {
		background-color: #ad0e11;
		border: none;
		color: #fff;
		width: 100%;
		padding: 10px;
		display: block;
		text-align: center;
	}

	.footer-makers-span {
		margin: 10px 0;
		text-align: right;
		padding-right: 10px;
	}
	.renew{
		color: #fff;
		background-color: #ad0e11;
		padding: 10px 20px;
		border-radius: 3px;
		margin-left: 20px;
	}
	.containe{
		margin-bottom: 95px;
	}
	.authd button{
		color: #fff;
		border-radius: 20px;
		border: none;
		width:40px;
		height: 40px;
	}
	.authd .btn1{
		background-color: #ad0e11;
		margin: 0 7px;
	}
	.authd .btn2{
		background-color: #68a870;
	}
	.authd{
		margin-top: 15px;
		margin-left: 10px;
	}
	.auth{
		font-size: 16px;
		font-weight: bold;
	}
	.worry{
		font-size: 14px;
		line-height: 38px;
		float: right;
		margin-right: 10px;
		font-weight: bold;
	}
	.add{
		background-color: #ad0e11;
		border: none;
		padding:2px 10px;
		color: #fff;
		border-radius: 3px;
		float: right;
		margin-right: 10px;
	}
	.add:active{
		color: #fff;
	}
	.mystore{
		margin-left: 10px;
		font-size: 16px;
		font-weight: bold;
	}

	ul.block-li {
		display: block;
		/*text-align: center;*/
		margin: 20px 0;
	}

	ul.block-li li{
		width: 18%;
		height: 101px;
		text-align: center;
		display: inline-block;
		overflow: hidden;
	}

	ul.block-li li:first-child {
		margin-left: 2.3%;
	}

	ul.block-li li:nth-child(6) {
		margin-left: 2.3%;
	}

	.over-text {
		overflow: hidden;
    	white-space: nowrap;
    	text-overflow: ellipsis;
    	display: inline-block;
    	width: 100%;
	}

</style>

