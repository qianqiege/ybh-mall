<style>

	.huiyuan {
		width: 92%;
		margin: 0 auto;
		display: flex;
	}

	.huiyuan div {
		width: 26%;
		height: 40px;
		background: #DCDCDC;
		flex: 1;
		margin-right: 2%;
		text-align: center;
		line-height: 40px;
		border-radius: 10px 35px;
	}

	.img_width{
		width: 100%;
	}

	.images div {
		display: none;
		margin-top: 5%; 
	}

	.active {
		background: #b11313!important;
		color: #fff;
	}

</style>





<h1 style="text-align:center;margin-top: 5%;margin-bottom: 5%; font-size:20px;font-family: '微软雅黑';">御易健会员</h1>
<div class="huiyuan">
	<div class="active">YBJ</div>
	<div>YBZ</div>
	<div>YBS</div>
</div>


<div class="images">
	<div style="display: block;">
		<%= image_tag "ybj.jpg" ,class: "img_width" %>
	</div>

	<div>
		<%= image_tag "ybz.jpg" ,class: "img_width" %>
	</div>

	<div>
		<%= image_tag "ybs.jpg" ,class: "img_width" %>
	</div>
</div>

<script type="text/javascript">
	
	$(".huiyuan div").each(function(index, val) {
		$(this).click(function(){
			console.log(index);
			$(".images div").eq(index).show().siblings().hide();
			$(".huiyuan div").eq(index).addClass("active").siblings().removeClass("active");
		})
	});

</script>