<script type="text/javascript">

		var allPrice = 0;

		//加的效果
		$(".add").click(function(){
			var n=$(this).prev().val();
			var num=parseInt(n)+1;
			if(num==0){ 
				return;
			}
			$(this).prev().val(num);
			var price = parseFloat($(this).parent().siblings('.price').text());
			var statusC = $(this).parent().siblings('.checkbox').is(':checked');
			if (statusC) {
				allPrice += price;
				$("#priceTotal").text(allPrice);
			}else {
				return false;
			}
		});
			//减的效果
		$(".jian").click(function(){
			var n=$(this).next().val();
			var num=parseInt(n)-1;
			if(num==0){ 
				return
			}
			$(this).next().val(num);
			var price = parseFloat($(this).parent().siblings('.price').text());
			var statusC = $(this).parent().siblings('.checkbox').is(':checked');
			if (statusC) {
				allPrice -= price;
				$("#priceTotal").text(allPrice);
			}else {
				return false;
			}
		});

		
		$('.checkbox').click(function(){
			
			var num = parseInt($(this).siblings('.gw_num').find("input").val());
			if ($(this).is(':checked')) {
				allPrice += $(this).siblings('.price').text() * num;
			}else {
				allPrice -= $(this).siblings('.price').text() * num;
			}

			$("#priceTotal").text(allPrice);
		})

</script>