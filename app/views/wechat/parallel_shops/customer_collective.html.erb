<style type="text/css" media="screen">
	.container {
		overflow-y: auto;
		/*padding-bottom: 3px;*/
	}

	.price {
		width:220px;
		height: 220px;
		margin: 0 auto;
		border:1px solid #ccc;
		margin-top: 10%;
	}

	.allPay {
		text-align: center;
		color:#ad0e11;
		line-height: 50px;
	}

	.listShow {
		width:85%;
		margin: 0 auto;
		padding:0;
		margin-top: 20px;
		padding-bottom: 108px;
	}

	.listShow li {
		display: flex;
		height:90px;
		border-bottom: 1px solid #ccc;
	}

	.listShow li .proLeft {
		width:90px;
	}

	.listShow li .proLeft img {
		width:80px;
		height:80px;
		margin: 5px 0 0 5px;
	}

	.listShow li .proRight {
		flex:1;
		padding-left: 5%;
	}

	.listShow li .proRight .proName {
		font-size: 18px;
		color:#474747;
		margin: 0;
		margin-top:18px;
	}

	.listShow li .proRight .proInfo {
		margin: 0;
		margin-top:10px;
		font-size: 14px;
		color:#888;
	}

	.call-number {
		text-align: center;
		font-size: 20px;
		font-weight: 600;
		margin-top: 10px;
	}
	.pric-block {
		border: 25px solid #ad0e11;
		padding-bottom: 11.11px;
	}
	.pro-list {
		padding: 10px;
		margin-top: 20px;
	}
	.pro-list span {
		background-color: #ad0e11;
		color: #fff;
		padding: 3px 10px;
		display: inline-block;
	}
</style>

<%= title '平行待配领' %>
<div class="container">
	<div class="">
	<div class="pro-list">
		<span>待领配订单</span>
	</div>
	<ul class="listShow">
		<% @shop_orders.each do |order_item| %>
			<a href="<%= wechat_parallel_shops_shopreceive_path(order_id: order_item) %>">
				<li>
					<div class="proRight">
						<p class="proName">叫号码: <%= order_item.show_call_number %></p>
						<p class="proInfo">
							<span>顾客名: <%= WechatUser.find(order_item.wechat_user_id).user.name %></span>
						</p>
					</div>
				</li>
			</a>
		<% end %>
	</ul>

</div>
