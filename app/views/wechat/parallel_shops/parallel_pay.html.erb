<style>
  .tope {
    width: 100%;
    height: 120px;
    position: fixed;
    top: 0px;
    z-index: 2;
  }

  .bod {
    position: relative;
    top: 120px;
  }

  .left {
    width: 20%;
    height: 100%;
    position: fixed;
    overflow: scroll;

  }

  .right {
    width: 80%;
    height: 100%;
    margin-left: 20%;
    overflow: scroll;
  }
</style>
<div class="tope">
  <%= render 'shop_abstract' %>
</div>
<div class="bod">
  <div class="left">
    <div class="shopClassify">
      <ul>
        <% @classify.each do |c| %>
            <a href="#<%= c.id %>">
              <li><%= c.name %></li>
            </a>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="right">
      <div class="shopProductList ">
        <ul class="">
          <% @classify.each do |c| %>
              <li>
                <div id="<%= c.id %>" class="title"><%= c.name %></div>
                <ul class="clearfix">
                  <% @ps.where(contents_category_id: c.id).each do |product| %>
                      <li>
                        <a class="li-image">
                          <%= image_tag product.image_url(:product_icon) if product.image_url.present? %>
                          <h5 class='text-center'><%= product.name %></h5>
                          <p class="item-price text-center">
                            <em>Â¥<%= money product.now_product_price %></em>
                          </p>
                        </a>
                      </li>
                  <% end %>
                </ul>
              </li>
          <% end %>
        </ul>
      </div>

  </div>

</div>
