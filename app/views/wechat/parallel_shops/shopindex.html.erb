
<style>

.weui-tab__panel {
    height:100%;
    background: #fff;
    overflow-y: auto;
}

.shopList {
	background: #fff;
}

.shopList ul {
    border-top: 1px solid #ccc;
}

.shopList ul li {
    display: flex;
    border-bottom:1px solid #ccc;
}

.shopList ul li .slLeft,.shopList ul li .slRight {
    display: inline-block;
}

.shopList ul li .slLeft {
    width: 30%;
    padding:2%;
}

.shopList ul li .slRight {
    flex:1;
}

.shopList ul li .slLeft img {
    width: 100%;
}

.shopList ul li .slRight p {
    font-size: 1.1rem;
    margin: 6% 0 0 4%;
}

.shopList ul li .slRight span {
    font-size: 0.8rem;
    margin: 4% 0 0 4%;
    color: #666;
}

a {
	text-decoration:none;
	out-line: none;
	color: #000;
	font-family: '微软雅黑';
}

.topImage {
	width:100%;
}

.module-title {
	margin:0;
}

.block-li {
    display: flex;
    padding:2% 0;
}

.block-li li {
    flex:1;
    text-align: center;
}

.shopHeader {
    height:40px;
    display: flex;
    background: #ad0e11;
}

.shopHeader input {
    flex:1;
    margin-left: 4%;
    height:26px;
    margin-top: 5px;
    padding-left: 3%;
    border:0;
    border:1px solid #fff;
    border-radius: 5px;
    --webkit-appearance: none;

}

.shopHeader a {
    display: inline-block;
    padding:0 2%;
    margin:0 4% 0 1%;
    height:26px;
    line-height: 26px;
    margin-top: 6px;
    border:0;
    color: #fff; 
    background: transparent;
    font-size: 14px;
}
/*
.module-title {
	padding-top: 10px;
}
*/
.shopTag {
    display: flex;
    padding:1% 5% 1% 2%;
    /*margin:1% 0;*/
    background: #fff;
    border-bottom: 1px solid #eee;
}

h5 {
    color: #ad0e11;
    font-family: '微软雅黑';
    font-size: 14px;
}

</style>

