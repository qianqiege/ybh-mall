/*入口按钮样式*/
.block-plan-btn ul {
	padding: 0;
	/*padding-left: 5%;*/
	display: block;
	overflow: hidden;
}
.block-plan-btn ul li {
	background-color: #ad0e11;
	float: left;
	width: 45%;
	font-size: .9rem;
	text-align: center;
	border-radius: 6px;
}
.block-plan-btn ul li:nth-child(odd) {
	margin: 10px 0;
	margin-left: 2.5%;
	margin-right: 2.5%;
}
.block-plan-btn ul li:nth-child(even) {
	margin: 10px 0;
	margin-left: 2.5%;
}
.block-plan-btn ul li a {
	display: block;
	padding: 8px 3%;
	color: #fff;
	/*min-height: 59px;*/
}
.block-plan-btn ul li a span:last-child {
	display: block;
	margin-top: 3px;
	position: relative;
	/*top: 3px;*/
}
.shopTag {
