
<style>

body {
	margin: 0px;
}

a {
	text-decoration: none;
}

div {
	padding: 0;
	margin: 0;
}

.shopList ul {
    border-top: 1px solid #ccc;
    margin-top: 2%;
}

.shopList ul li {
    display: flex;
    border-bottom:1px solid #ccc;
}

.shopList ul li .slLeft,.shopList ul li .slRight {
    display: inline-block;
}

.shopList ul li .slLeft {
    width: 30%;
    padding:2%;
}

.shopList ul li .slRight {
    flex:1;
}

.shopList ul li .slLeft img {
    width: 100%;
    border-radius: 13px;
}

.slRight {
	margin-top: 11px;
	padding-left: .5rem;
	padding-right: 8px;
}

.slRight-title {
	overflow: auto;
	margin-bottom: 8px;
}
.goPlan {
	background: #ad0e11;
	color: #fff;
	display: inline-block;
	padding: 5px 10px;
	font-size: 14px;
}
.shopList ul li .slRight span {
    font-size: 0.8rem;
    color: #444;
}
.shopList ul li .slRight b {
    font-size: 0.8rem;
    font-weight: normal;
    color: #fff !important;
	padding: 3px 8px;
	position: relative;
	top: 0;
	margin: 10px;
}

.slRight-title .leader {
	background: #ad0e11;
}
.slRight-title .success {
	background: #68a870;
}
.slRight-title .partner {
	background: #5aa0d6;
}
.slRight-title .fail {
	background: red;
}
.plan-image {
	margin-bottom: 15px;
}

.plan-image img {
	width: 100%;

}
.plan-button{
	position: fixed;
	bottom: 58px;
	width: 100%;
}
.plan-button a{
	display: block;
	text-align: center;
	background: #ad0e11;
	padding: 8px 0;
	color: #fff;
	font-size: 14px;
}

</style>

<div class="shopList">
	<div class="plan-image">
		<a href="<%=  wechat_makers_instructions_path %>">
			<%= image_tag "makers.jpg" %>
		</a>
	</div>
	<div>
		<span class="goPlan">发起的计划</span>
	</div>
		<ul style="padding-left: 0px; margin-bottom: 45px;">
            <% @plans.each do |t| %>
                <a href="<%= wechat_makers_plan_details_path(t) %>" style="display: block;">
                 <li>
                     <div class="slLeft">
                        <%= image_tag "east-ep-a51-9990611.jpg", class:'shopImage' %>
                     </div>
                     <div class="slRight">
                         <div class="slRight-title">
                             <span>创客计划</span>
                             <% if t.is_capital == true %>
                                 <b class="leader">队长</b>
                             <% else %>
                                 <b class="partner">伙伴</b>
                             <% end %>
                             <% if t.active == true %>
                                 <b class="success">已激活</b>
                             <% else %>
                                 <b class="fail">待激活</b>
                             <% end %>
                         </div>
                            <div>
                                <span>发起时间：2017-12-18</span>
                            </div>
                     </div>
                 </li>
                </a>
            <% end %>
		</ul>
    <div class="plan-button">
    	<a href="<%=  wechat_makers_protocol_path %>">发起创客计划</a>
    </div>
</div>
