<%= title "消费共同体计划承诺书" %>
<div>
  <div class="containe">
    <%= raw @sharing_plan_contract.html_safe %>
  </div>
  <%= form_for(:plan, url: wechat_plans_path) do %>
      <%= select("plan", "plan_rule_name", @plan_rules_name, { include_blank: false }) %>

      <div style="margin-top: 20px;margin-bottom: 65px;">
        <input type="checkbox" checked id="commit">
        <label>我同意签订承诺消费书</label>
      </div>
      <div class="argee">
        <input name="plan[user_id]" value="<%= @current_user_id %>" style="display:none;">
        <!--199计划-->

        <% if @plan_rule_name %>
            <input name="plan[plan_rule_id]" value="<%= @plan_rule_id %>" style="display:none;">
        <% end %>

        <% if @invite_plan_id %>
            <input name="plan[invite_plan_id]" value="<%= @invite_plan_id %>" style="display:none;">
        <% end %>
        <input type="submit" name="action" class="sub" value="提交"/>
      </div>
  <% end %>
</div>

<script>
    $(function () {
        $(".link").click(function () {
            if ($('#commit').is(":checked")) {
                location.href = "<%= wechat_community_plandetail_path %>";
            } else {
                alert("请在承诺书前打钩")
            }
        });
    })
</script>
