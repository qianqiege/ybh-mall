<style>

  a {
    text-decoration: none;
  }

  div {
    padding: 0;
    margin: 0;
  }

  .shopList ul {
    border-top: 1px solid #ccc;
    margin-top: 2%;
  }

  .shopList ul li {
    display: flex;
    border-bottom: 1px solid #ccc;
  }

  .shopList ul li .slLeft, .shopList ul li .slRight {
    display: inline-block;
  }

  .shopList ul li .slLeft {
    width: 30%;
    padding: 2%;
  }

  .shopList ul li .slRight {
    flex: 1;
  }

  .shopList ul li .slLeft img {
    width: 100%;
    border-radius: 13px;
  }

  .shopList ul li .slRight span {
    font-size: 0.8rem;
    color: #444;
  }

  .shopList ul li .slRight b {
    font-size: 0.8rem;
    font-weight: normal;
    color: #fff !important;
    padding: 3px 8px;
    position: relative;
    top: 0;
    margin: 10px;
  }

  .slRight-title .leader {
    background: #ad0e11;
  }

  .slRight-title .success {
    background: #68a870;
  }

  .slRight-title .partner {
    background: #5aa0d6;
  }

  .slRight-title .fail {
    background: red;
  }

  .plan-image {
    margin-bottom: 15px;
  }

  .plan-image img {
    width: 100%;

  }

  .plan-button {
    position: fixed;
    bottom: 58px;
    width: 100%;
  }

  .plan-button a {
    display: block;
    text-align: center;
    background: #ad0e11;
    padding: 8px 0;
    color: #fff;
    font-size: 14px;
  }

  .shopTag {
    display: flex;
    padding: 1% 5% 1% 2%;
    /*margin:1% 0;*/
    background: #fff;
    /*border-bottom: 1px solid #eee;*/
  }

  .block-plan-btn ul li.active-li {
    background-color: #ccc;
  }
</style>
<%= title '平行系统计划' %>

<div>
  <div class="plan-image">
    <a href="">
      <%= image_tag "makers.jpg" %>
    </a>
  </div>
  <div style="margin: 0 0 20px 0;">
    <div class="block-plan-btn">
      <ul>
        <% @sharing_plan_types.each do |t| %>
            <li class="<%= t.plan_type.in?(@user_plans_type) ? 'active-li' : '' %>">
              <%= link_to_if !t.plan_type.in?(@user_plans_type), t.name+t.plan_type, new_wechat_plan_path(id: t) do %>
                  <%= t.name %>
                  <%= t.plan_type %>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="yyj-title yyj-title-h4">
    <h4>发起的计划</h4>
  </div>
  <div class="yyj-list-plan-item">
    <ul>
      <% @plan_records_all.each do |t| %>
          <a href="<%= wechat_plan_path(t) %>">
            <li>
              <div class="slLeft">
                <%= image_tag "east-ep-a51-9990611.jpg" %>
              </div>
              <div class="slRight">
                <h5><%= t.plan_rule.name %></h5>
                <span>发起时间：<%= t.created_at.to_s[0..9] %></span>
              </div>
            </li>
          </a>
      <% end %>
    </ul>
  </div>

</div>
