<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>
  <body>
    <div class="page tabbar js_show">
      <div class="page__bd" style="height: 100%;">
        <div class="weui-tab">
          <div class="weui-tab__panel">
            <%= yield %>
          </div>
          <div class="weui-tabbar">
            <a href="/" class="weui-tabbar__item weui-bar__item_on">
              <%= image_tag("home.png", class: "weui-tabbar__icon") %>
              <p class="weui-tabbar__label">首页</p>
            </a>
            <a href="javascript:;" class="weui-tabbar__item">
              <%= image_tag("category.png", class: "weui-tabbar__icon") %>
              <p class="weui-tabbar__label">分类</p>
            </a>
            <% if @user.user_id.nil? %>
              <a href="<%= user_binding_path %>" class="weui-tabbar__item">
                <%= image_tag("person.png", class: "weui-tabbar__icon") %>
                <p class="weui-tabbar__label">我的</p>
              </a>
            <% else %>
              <a href="<%= user_root_path %>" class="weui-tabbar__item">
                <%= image_tag("person.png", class: "weui-tabbar__icon") %>
                <p class="weui-tabbar__label">我的</p>
              </a>
            <% end %>
          </div>

          <%= render 'shared/flash' %>

        </div>
      </div>
    </div>
  </body>
</html>
